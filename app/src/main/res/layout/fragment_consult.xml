<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
            android:padding="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

        <ImageView
                android:id="@+id/wallet_read_imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/ic_error_outline_black_24dp"/>

        <TextView
                android:id="@+id/wallet_read_textView"
                android:gravity="center"
                android:textSize="36sp"
                android:text="@string/error_read_wallet_not_recognized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/create_new_wallet_button"
                style="@style/Theme.Cohmeia.Button.Recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Criar carteira"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>